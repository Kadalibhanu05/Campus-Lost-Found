<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Lost & Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style> body { font-family: 'Inter', sans-serif; background-color: #f0f4f8; } </style>
</head>
<body class="text-gray-800 flex flex-col min-h-screen">
    <header class="bg-white/80 backdrop-blur-md shadow-sm sticky top-0 z-50 border-b">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-800">Campus <span class="text-teal-500">Lost & Found</span></a>
            <div class="flex items-center space-x-4">
                <a href="/report" class="px-5 py-2 bg-teal-500 text-white font-semibold rounded-lg hover:bg-teal-600 shadow-md">+ Report an Item</a>
                <% if (user) { %>
                    <a href="/my-posts" class="font-semibold text-gray-600 hover:text-teal-500">My Posts</a>
                    <span class="font-semibold">Hi, <%= user.name %></span>
                    <a href="/logout" class="px-4 py-2 bg-red-500 text-white rounded-lg">Logout</a>
                <% } else { %>
                    <a href="/login" class="px-4 py-2 text-teal-600 border border-teal-600 rounded-lg">Log In</a>
                    <a href="/signup" class="px-4 py-2 bg-teal-600 text-white rounded-lg">Sign Up</a>
                <% } %>
            </div>
        </nav>
    </header>
    <main class="flex-grow">