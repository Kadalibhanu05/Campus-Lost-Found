<!-- views/my-posts.ejs -->
<%- include('partials/header') %>
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold">My Reported Items</h1>
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (items.length > 0) { %>
            <% items.forEach(item => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <a href="/item/<%= item._id %>">
                        <img src="<%= item.imageUrl %>" class="w-full h-48 object-cover">
                    </a>
                    <div class="p-4">
                        <h3 class="text-lg font-bold"><%= item.name %></h3>
                        <p class="text-sm text-gray-600"><%= item.status %></p>
                        <form action="/items/<%= item._id %>/delete" method="POST" class="mt-4">
                            <button type="submit" class="w-full py-2 bg-red-500 text-white rounded-md hover:bg-red-600">Delete Post (Item Returned)</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="col-span-full text-center text-gray-500 py-10">You haven't reported any items yet.</p>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>
