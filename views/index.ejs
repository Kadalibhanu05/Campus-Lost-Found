<!-- views/index.ejs -->
<%- include('partials/header') %>
<div class="container mx-auto px-4 py-20 text-center">
    <h1 class="text-5xl font-extrabold text-gray-900">Find What You're Missing</h1>
    <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">Select your university to see all lost and found items on your campus.</p>
    <div class="mt-8 max-w-lg mx-auto">
        <form action="/items" method="GET" class="flex flex-col sm:flex-row items-center gap-2 bg-white p-3 rounded-lg shadow-lg border">
            <select name="university" class="w-full px-4 py-3 border-0 rounded-lg focus:ring-2 focus:ring-teal-500" required>
                <option value="" disabled selected>Select your university</option>
                <% universities.forEach(uni => { %>
                    <option value="<%= uni %>"><%= uni %></option>
                <% }); %>
            </select>
            <button type="submit" class="w-full sm:w-auto px-8 py-3 bg-teal-500 text-white font-semibold rounded-lg hover:bg-teal-600">Search</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>