<%- include('partials/header') %>

<div class="min-h-screen bg-slate-50 py-10">
    <div class="container mx-auto px-4">
        
        <div class="mb-10 text-center md:text-left">
            <h1 class="text-3xl font-extrabold text-slate-900 mb-2">
                Items at <span class="text-indigo-600 underline decoration-amber-400 decoration-4 underline-offset-4"><%= university %></span>
            </h1>
            <p class="text-slate-500 text-lg">Browse lost and found items reported on this campus.</p>
        </div>

        <div class="mb-10 bg-white p-4 rounded-2xl shadow-sm border border-slate-200 flex flex-col lg:flex-row gap-4 items-center justify-between">
            
            <div class="flex gap-2 w-full lg:w-auto overflow-x-auto pb-2 lg:pb-0">
                <a href="/items?university=<%= encodeURIComponent(university) %>" 
                   class="px-6 py-2.5 rounded-xl text-sm font-bold transition whitespace-nowrap <%= !currentStatus ? 'bg-indigo-600 text-white shadow-md ring-2 ring-indigo-600' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">
                   All Items
                </a>
                <a href="/items?university=<%= encodeURIComponent(university) %>&status=Lost" 
                   class="px-6 py-2.5 rounded-xl text-sm font-bold transition whitespace-nowrap <%= currentStatus === 'Lost' ? 'bg-red-500 text-white shadow-md ring-2 ring-red-500' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">
                   Lost
                </a>
                <a href="/items?university=<%= encodeURIComponent(university) %>&status=Found" 
                   class="px-6 py-2.5 rounded-xl text-sm font-bold transition whitespace-nowrap <%= currentStatus === 'Found' ? 'bg-amber-400 text-indigo-900 shadow-md ring-2 ring-amber-400' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' %>">
                   Found
                </a>
            </div>

            <form action="/items" method="GET" class="relative w-full lg:w-96 group">
                <input type="hidden" name="university" value="<%= university %>">
                <% if (currentStatus) { %><input type="hidden" name="status" value="<%= currentStatus %>"><% } %>
                
                <input type="search" name="search" value="<%= searchTerm || '' %>" placeholder="Search items (e.g. Blue Wallet)..." 
                    class="w-full pl-11 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none text-slate-700 transition-all shadow-inner">
                
                <div class="absolute left-4 top-3.5 text-slate-400 group-focus-within:text-indigo-500 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
            </form>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            <% if (items.length > 0) { %>
                <% items.forEach(item => { %>
                    <a href="/item/<%= item._id %>" class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 overflow-hidden flex flex-col h-full transform hover:-translate-y-1">
                        
                        <div class="relative h-60 bg-slate-100 overflow-hidden">
                            <img src="<%= item.imageUrl %>" alt="<%= item.name %>" 
                                 class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700"
                                 onerror="this.onerror=null;this.src='https://placehold.co/600x400/f1f5f9/94a3b8?text=No+Image';">
                            
                            <span class="absolute top-3 right-3 px-3 py-1 text-xs font-extrabold uppercase tracking-wide rounded-full shadow-sm 
                                <%= item.status === 'Lost' ? 'bg-red-500 text-white' : 'bg-amber-400 text-indigo-900' %>">
                                <%= item.status %>
                            </span>

                            <div class="absolute bottom-3 left-3 px-2 py-1 bg-white/90 backdrop-blur-sm rounded-lg text-[10px] font-bold uppercase text-slate-700 shadow-sm border border-slate-100">
                                <%= item.category %>
                            </div>
                        </div>

                        <div class="p-5 flex-grow flex flex-col">
                            <div class="flex justify-between items-start mb-2">
                                <h3 class="text-lg font-bold text-slate-900 line-clamp-1 group-hover:text-indigo-600 transition"><%= item.name %></h3>
                            </div>
                            
                            <p class="text-sm text-slate-500 line-clamp-2 mb-4 flex-grow leading-relaxed"><%= item.description %></p>
                            
                            <div class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between text-xs font-medium text-slate-400">
                                <span><%= new Date(item.createdAt).toLocaleDateString() %></span>
                                <span class="text-indigo-600 group-hover:underline">View Details &rarr;</span>
                            </div>
                        </div>
                    </a>
                <% }); %>
            <% } else { %>
                <div class="col-span-full py-24 text-center bg-white rounded-3xl border border-dashed border-slate-300">
                    <div class="w-20 h-20 bg-indigo-50 rounded-full flex items-center justify-center mx-auto mb-4 text-indigo-300">
                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </div>
                    <h3 class="text-xl font-bold text-slate-900">No items found</h3>
                    <p class="text-slate-500 mt-2 max-w-sm mx-auto">We couldn't find any items matching your criteria. Try adjusting your search or filters.</p>
                    <a href="/items?university=<%= encodeURIComponent(university) %>" class="mt-6 inline-block px-6 py-2 bg-indigo-100 text-indigo-700 font-bold rounded-lg hover:bg-indigo-200 transition">
                        Clear Filters
                    </a>
                </div>
            <% } %>
        </div>

    </div>
</div>

<%- include('partials/footer') %>