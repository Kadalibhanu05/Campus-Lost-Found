<!-- views/items.ejs -->
<%- include('partials/header') %>
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold">Items at <span class="text-teal-500"><%= university %></span></h1>
    <div class="my-6 p-4 bg-white rounded-lg shadow-md flex flex-col md:flex-row gap-4 items-center">
        <div class="flex-grow w-full md:w-auto">
            <a href="/items?university=<%= university %>" class="px-4 py-2 rounded-md <%= !currentStatus ? 'bg-teal-500 text-white' : 'bg-gray-200' %>">All Items</a>
            <a href="/items?university=<%= university %>&status=Lost" class="px-4 py-2 rounded-md <%= currentStatus === 'Lost' ? 'bg-red-500 text-white' : 'bg-gray-200' %>">Lost</a>
            <a href="/items?university=<%= university %>&status=Found" class="px-4 py-2 rounded-md <%= currentStatus === 'Found' ? 'bg-green-500 text-white' : 'bg-gray-200' %>">Found</a>
        </div>
        <form action="/items" method="GET" class="flex-grow w-full md:w-auto flex gap-2">
            <input type="hidden" name="university" value="<%= university %>">
            <% if (currentStatus) { %><input type="hidden" name="status" value="<%= currentStatus %>"><% } %>
            <input type="search" name="search" placeholder="Search by item name..." value="<%= searchTerm || '' %>" class="w-full px-4 py-2 border rounded-md">
            <button type="submit" class="px-4 py-2 bg-teal-500 text-white rounded-md">Search</button>
        </form>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% if (items.length > 0) { %>
            <% items.forEach(item => { %>
                <a href="/item/<%= item._id %>" class="block bg-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-transform">
                    <img src="<%= item.imageUrl %>" class="w-full h-48 object-cover" onerror="this.onerror=null;this.src='https://placehold.co/600x400/cccccc/ffffff?text=Image+Not+Found';">
                    <div class="p-4">
                        <span class="px-2 py-1 text-xs font-semibold rounded-full <%= item.status === 'Lost' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>"><%= item.status %></span>
                        <h3 class="text-lg font-bold mt-2 truncate"><%= item.name %></h3>
                        <p class="text-sm text-gray-600 mt-1 h-12 overflow-hidden"><%= item.description %></p>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p class="col-span-full text-center text-gray-500 py-10">No items match your criteria.</p>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>